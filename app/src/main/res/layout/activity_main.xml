<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2d3436">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="30dp">

        <Button
            android:id="@+id/c_key"
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:gravity="center_horizontal"
            android:onClick="playC"/>

        <Button
            android:id="@+id/d_key"
            android:layout_width="344dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/orange"
            android:onClick="playD" />

        <Button
            android:id="@+id/e_key"
            android:layout_width="317dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/yellow"
            android:onClick="playE" />

        <Button
            android:id="@+id/f_key"
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/green"
            android:onClick="playF" />

        <Button
            android:id="@+id/g_key"
            android:layout_width="281dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dgreen"
            android:onClick="playG"/>

        <Button
            android:id="@+id/a_key"
            android:layout_width="265dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blue"
            android:onClick="playA" />

        <Button
            android:id="@+id/b_key"
            android:layout_width="249dp"
            android:layout_height="60dp"
            android:background="@color/purple"
            android:onClick="playB" />
    </LinearLayout>
</RelativeLayout>